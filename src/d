  case sector

  when "Norte"
    if estado == "Nuevo"
      if parqueadero == "No" 
        if num_habitaciones <= 2 && num_banos == 1 && area_construida <= 170 && niveles <= 2
          random(130_000_000, 150_000_000)
        else
          random(160_000_000, 190_000_000)
        end

      elsif parqueadero == "Si" 
        if num_habitaciones <= 2 && num_banos == 1 && area_construida <= 170 && niveles <= 2
          random(140_000_000, 160_000_000)
        else
          random(170_000_000, 200_000_000)
        end


  if ["Nuevo", "Casi nuevo"].include?(estado)
  case sector
  when "Norte"
    precio_base = 250_000_000
  when "Centro"
    precio_base = 200_000_000
  when "Sur"
    precio_base = 150_000_000
  else
    precio_base = 120_000_000  # Valor por defecto
  end

  # Si es "Casi nuevo", se le descuenta 10 millones
  precio_base -= 10_000_000 if estado == "Casi nuevo"

  # Ajustes por características
  precio_base += 10_000_000 if parqueadero == "Si"
  precio_base += (num_habitaciones - 2) * 5_000_000 if num_habitaciones > 2
  precio_base += (num_banos - 1) * 4_000_000 if num_banos > 1
  precio_base += [(area_construida - 170), 0].max * 100_000
  precio_base += (niveles - 2) * 5_000_000 if niveles > 2

  # Precio final con un pequeño rango aleatorio
  precio = random(precio_base - 5_000_000, precio_base + 5_000_000)
end
----
if ["Nuevo", "Casi nuevo"].include?(estado)
  case sector
  when "Norte"
    precio_base = 250_000_000
  when "Centro"
    precio_base = 200_000_000
  when "Sur"
    precio_base = 150_000_000
  else
    precio_base = 120_000_000
  end

  # Descuento por estado "Casi nuevo"
  precio_base -= 10_000_000 if estado == "Casi nuevo"

  # Ajustes por características
  precio_base += 10_000_000 if parqueadero == "Si"
  precio_base += (num_habitaciones - 2) * 5_000_000 if num_habitaciones > 2
  precio_base += (num_banos - 1) * 4_000_000 if num_banos > 1
  precio_base += [(area_construida - 170), 0].max * 100_000
  precio_base += (niveles - 2) * 5_000_000 if niveles > 2

  # Precio final: ajustado y redondeado
  precio = random(precio_base - 5_000_000, precio_base + 5_000_000).round
end

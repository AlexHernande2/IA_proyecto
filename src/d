if estado == "Nuevo"
  case sector
   when "Norte"
    if parqueadero == "Si"
      if num_habitaciones <= 2 and num_banos <=1 and area_construida <=170 and niveles <= 2 
        random(250000000, 280000000)

      elsif num_habitaciones <= 2 and num_banos <=1 and area_construida >170 and niveles <= 2 
        random(270000000, 300000000)

      elsif num_habitaciones >= 2 and num_banos >=1 and area_construida >170 and niveles > 2 
        random(280000000, 310000000)

    end
  

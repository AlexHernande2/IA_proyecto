        end

      end
    end

  when "Centro"
    if estado == "Nuevo"
      if parqueadero == "No"
        if num_habitaciones <= 2
          random(110_000_000, 130_000_000)
        else
          random(140_000_000, 160_000_000)
        end

      elsif parqueadero == "Si" 
        if num_habitaciones <= 2
          random(130_000_000, 150_000_000)
        else
          random(160_000_000, 180_000_000)
        end

      elsif parqueadero == "No" 
        if num_habitaciones <= 2
          random(120_000_000, 140_000_000)
        else
          random(150_000_000, 170_000_000)
        end

      elsif parqueadero == "Si" 
        if num_habitaciones <= 2
          random(120_000_000, 140_000_000)
        else
          random(150_000_000, 170_000_000)
        end

      end
    end

  when "Sur"
    if estado == "Nuevo"
